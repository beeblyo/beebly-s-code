/* 드래그 금지 */
*
{
	-ms-user-select: none;
	-moz-user-select: -moz-none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	user-select:none;
}


/* =============== 리셋 =============== */
body, header, main, footer, div,
h1, h2, h3, h4, h5, h6,
p, span a, ul, li, input, textarea, label
{
	/* 기본 마진/패딩 없애기 */
	margin: 0;
	padding: 0;
	
	box-sizing: border-box; /* 박스 사이즈 고정(width = padding + border) */
}

body
{
	min-height: 100%;
}

a
{
	text-decoration: none; /* 밑줄 없애기 */
	color: inherit;        /* 부모 글자색 상속 */
	display: inline-block; /* a가 높이값을 가지기 위해 */
}

ul, li
{
	list-style: none; /* 리스트 스타일 없애기 */
}

input[type=text],
input[type=password],
input[type=email]
{
	padding: 5px 10px; /* 입력 폼 기본 패딩 */
}

input, button
{
	/* 기본 테두리 없애기 */
	border: none;
	outline: none;
}

textarea
{
	resize: none;      /* 사이즈 수정 불가 */
	padding: 5px 10px; /* 기본 안쪽 여백 */
}

.clearfix:after
{
	/* float에 의한 부모 높이 사라짐 방지 */
	content: '';
	display: block;
	clear: both;
}

.wrap
{
	margin: 0 auto; /* 가운데 정렬 */
}

.center
{
	text-align: center;
}

.error
{
	height: 300px;
	margin: 0 auto;
}

.error h2
{
	padding-top: 50px;
	margin-bottom: 20px;
}


.error .btn
{
	background: #282828;
	color: #fff;
}
/* ==================== btn ==================== */
.btn
{
	min-width: 80px;
	height: 30px;
	line-height: 30px;
	padding: 0 5px;
	border-radius: 10px;
	font-size: 14px;
	text-align: center;
	cursor: pointer; /* 버튼 커서 포인터 */
}

.btn:hover
{
	background: #6667AB;
}

/* ==================== logo ==================== */
.w_logo
{
	background: url('/Ego_v.0.2/img/logo/w_logo.png') no-repeat center center;
	background-size: cover;
}

.b_logo
{
	background: url('/Ego_v.0.2/img/logo/b_logo.png') no-repeat center center;
	background-size: cover;
}

.b_logo:hover
{
	background: url('/Ego_v.0.2/img/logo/b_logo_hover.png') no-repeat center center;
	background-size: cover;
}

/* ==================== paging ==================== */
.paging
{
	margin-top: 10px;
	text-align:center;
	font-size: 16px;
}

.paging li
{
	display: inline-block;
	margin-right: 5px;
}

.paging a
{
	padding: 5px;
}

.paging a:hover {
	color: tomato;
}

.paging .now {
	color: tomato;
	font-weight: bold;
}

/* ==================== background black ==================== */
.background
{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
	
	position: absolute;
    top: 0;
    left: 0;
}

/* ==================== to top ==================== */
.to_top
 {
	width: 60px;
	height: 60px;
	background: #282828;
	color: #fff;
	border-radius: 50px;
	text-align: center;
	line-height: 50px;
	
	position: fixed;
	right: 30px;
	bottom: -100px;
	transition: transform 1s;
	
	box-shadow: 0 0 10px rgba(255,255,255,0.2);
	
	cursor:pointer;
}

/* ==================== footer ==================== */
footer
{
	height: 100px;
  	background: #282828;
	font-size: 14px;
	line-height: 20px;
  	padding: 20px;
  	color: #fff;
}

footer div
{
	display: inline-block;
}

footer div:last-child
{
	width: 120px;
	height: 50px;
	float: right;
	z-index: 90;
}

footer div a
{
	width: 100%;
	height: 100%;
}