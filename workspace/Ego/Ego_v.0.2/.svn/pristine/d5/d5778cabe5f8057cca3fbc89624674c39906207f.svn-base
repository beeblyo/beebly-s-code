.slide
{
    background-color: #282828;
    padding: 40px;
    position: relative;
    width: 1100px;
    margin: 0 auto;
}

.swiper-button-next
{
    right: 80px !important;
}

.swiper-button-prev
{
    left: 80px !important;
}

.swiper-container {
    width: 800px;
    height: 100%;
    text-align: center;
}

.hidden
{
    overflow: hidden;
    width: 800px;
    margin: 0 auto;
}

.swiper-slide {
    text-align: center;
    width: 260px;
    height: 360px;
    font-size: 18px;
    background: #fff; /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    box-shadow: 0px 2px 10px 0px #848484;
}

.swiper-slide img
{
    width: 100%;
    height: 100%;
}


