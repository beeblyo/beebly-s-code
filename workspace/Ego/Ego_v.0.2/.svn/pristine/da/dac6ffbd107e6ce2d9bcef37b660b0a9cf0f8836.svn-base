<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ include file="../include/header.jsp" %>
<!-- ====================== 메인 컨텐츠 시작 ==================== -->
<main>
	<div class="backward_wrap">
		<div class="back_btn btn">
			<a href="./info.jsp"></a>
		</div>
	</div>
	
	<div>
		<h3>회원정보</h3>
		<div class="info_wrap">
			<form name="" method="post" action="./info.jsp">
				<div class="clearfix">
					<div class="user_profile">
						<img src="/Ego_v.0.2/img/icon/profile.jpg">
						<label class="input_file_btn btn" for="input_file">
						 	프로필 사진
						</label>
						<input id="input_file" type="file" name="profile" accept="image/png, image/jpeg, image/jpg">
						<a class="sec_btn btn">탈퇴하기</a>
					</div>
					<div class="user_contents">
						<p>* 표시만 수정이 가능합니다.</p>
						<div class="re_info">
							<div>
								<span>이메일</span>
								<input type="text" name="email" value="ezen@naver.com" readonly="readonly">
							</div>
							<div>
								<span>닉네임(*)</span>
								<input type="text" name="id" value="에고고">
							</div>
							<div>
								<span>비밀번호(*)</span>
								<input type="password" name="pw">
							</div>
							<div>
								<span>비밀번호 확인(*)</span>
								<input type="password" name="pwcheck">
							</div>
							<div>
								<span>성별</span>
								<label><input type="radio" name="gender" value="M" checked="checked" disabled="disabled">남</label>
								<label><input type="radio" name="gender" value="F" disabled="disabled">여</label>
							</div>
							<div>
								<span>생년월일</span>
								<input type="text" name="birth" value="1996-12-04" readonly="readonly">
							</div>
						</div>
					</div>
				</div>
				<div class="btn_wrap">
					<input class="re_info_btn btn" type="submit" value="수정완료">
				</div>
			</form>
		</div>
	</div>
</main>
<!-- ====================== 메인 컨텐츠 끝 ==================== -->
