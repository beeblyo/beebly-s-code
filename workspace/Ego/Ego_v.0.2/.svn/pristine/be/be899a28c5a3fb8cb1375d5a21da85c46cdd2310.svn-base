<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ include file="../../include/header.jsp" %>
<!-- 댓글 뷰 영역 -->
<%
String tno = request.getParameter("no");
String folder = request.getParameter("folder");


%>
<div>
	<%
	CommentDTO dto = new CommentDTO();
	CommentDTO rdto = new CommentDTO();
	dto.GetList(tno,"0");
	
	if(dto.GetListArray() != null)
	{
		for(CommentVO vo : dto.GetListArray())
		{				
			%>
			<div class="reply view_reply">	
				<div class="reply_profile">
				</div>
				<div class="reply_box">
					<div>
						<div class="reply_name"><%= vo.getCnick() %></div>
						<div class="reply_date"><%= vo.getCdate() %></div>
					</div>
					<div>
						<p>
							<%= vo.getCnote() %>
						</p>
						<%
						if( login != null && login.getNo().equals(vo.getC_uno()) )
						{
							%>
							<a>수정</a>
							<a>삭제</a>
							<%
						}
						%>
					</div>
					<div class="re_reply_btn" onclick="ToggleReply(this);">└댓글(2)</div>
				</div>
			</div>
					
			<!-- 대댓글 뷰 영역 -->
			<%
			rdto.GetList(tno, vo.getCno());
			if(rdto.GetListArray() != null)
			{
				for(CommentVO rvo : rdto.GetListArray())
				{
					%>
					<div id="re_reply_wrap" class="re_reply_wrap clearfix">
						<div class="reply view_re_reply">
							<div class="reply_profile">
							</div>
							<div class="reply_box">
								<div>
									<div class="reply_name">이고에고</div>
									<div class="reply_date">2021.01.01</div>
								</div>
								<div>
									<p>
										<%= rvo.getCnote() %>
									</p>
									<a>수정</a>
									<a>삭제</a>
								</div>
							</div>
						</div>	
						<!-- 대댓글 입력 영역 -->
						<div class="reply view_re_reply">
							<div class="reply_profile">
							</div>
							<div class="reply_box">
								<div>
									<div class="reply_name"></div>
									<div class="reply_date">2021.01.01</div>
								</div>
								<form name="reply" method="post" action="reply.jsp">
									<textarea name="post"></textarea>
									<input type="submit" value="등록">
								</form>
							</div>
						</div>
					</div>			
					<%
				}
			}
		}
	}	
	%>
</div>

<div class="paging">
	<ul>
		<li><a href="#">◀</a></li>
		<li><a href="#" class="now">1</a></li>
		<li><a href="#">2</a></li>
		<li><a href="#">3</a></li>
